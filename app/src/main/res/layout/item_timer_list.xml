<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativePar"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                android:id="@+id/timer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/timer_name"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/year_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/year_unit_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/month_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/month_unit_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/day_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/day_unit_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hour_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hour_unit_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/minute_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/minute_unit_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/second_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/second_unit_place_holder_timer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/remainig_timer_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginEnd="1dp"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>