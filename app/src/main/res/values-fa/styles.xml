<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:typeface">@font/vazir_medium</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--dialog background-->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:color">#FFFFFF</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">34sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:fontFamily">@font/vazir_medium</item>

    </style>

    <style name="TimerListNumbersStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">36sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">e</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="fontFamily">@font/vazir_fd</item>
    </style>

    <style name="TimerListUnitsStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">e</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="fontFamily">@font/vazir_fd</item>
    </style>

</resources>
